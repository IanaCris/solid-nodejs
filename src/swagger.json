{
  "openapi": "3.0.0",
  "info": {
    "title": "UsersAPI Documentation",
    "description": "This is an API of Users",
    "version": "1.0.0",
    "contact": {
      "email": "ianasousati@gmail.com"
    }
  },
  "tags": [
    {
      "name": "users",
      "description": "Gerenciamento de usuários"
    }
  ],
  "paths": {
    "/users": {      
      "post": {
        "tags": ["users"],
        "summary": "Create a new user",
        "description": "Cria um novo usuário",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "Object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "João Pedro",
                  "email": "joao@gmail.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                },
                "example": {
                  "admin": false,
                  "id": "7acce24b-2170-4fc1-93ba-27cfbb029b89",
                  "name": "João Pedro",
                  "email": "joao@gmail.com",
                  "created_at": "2021-06-12T03:30:36.802Z",
                  "updated_at": "2021-06-12T03:30:54.627Z"
                }
              }
            }
          },
          "400": {
            "description": "Email já está sendo utilizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                },
                "example": {                  
                  "error": "This email is already in use"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["users"],
        "summary": "Lista todos os usuários",
        "description": "Somente usuário Admin pode acessar",
        "parameters": [
          {
            "name": "user_id",
            "in": "header",
            "description": "",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "example": [
                    {
                      "admin": false,
                      "id": "7acce24b-2170-4fc1-93ba-27cfbb029b89",
                      "name": "João Pedro",
                      "email": "joao@gmail.com",
                      "created_at": "2021-06-12T03:30:36.802Z",
                      "updated_at": "2021-06-12T03:30:54.627Z"
                    },
                    {
                      "admin": true,
                      "id": "7acce24b-2170-4fc1-93ba-27cfbb029b89",
                      "name": "João Pedro",
                      "email": "joao@gmail.com",
                      "created_at": "2021-06-12T03:30:36.802Z",
                      "updated_at": "2021-06-12T03:30:54.627Z"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Usuário sem permissão ou Usuário não encontrado",
            "content": {
              "application/json": {
                "example": {                  
                  "error": "You need to be an administrator to list all users."
                }
              }
            }
          }
        }
      }
    },
    "/users/{userId}": {
      "get": {
        "tags": ["users"],
        "summary": "List one user",
        "description": "Retorna um usuário específico",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "description": "ID do usuário",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{userId}/admin": {
      "patch": {
        "tags": ["users"],
        "summary": "Turn a user admin",
        "description": "Torna um usuário como admin",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "admin": {
            "type": "boolean",
            "enum": [
              "true",
              "false"
            ]
          },
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          }
        },
        "xml": {
          "name": "User"
        }
      }
    }
  }
}